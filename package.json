{
  "name": "vercord-recode",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "format": "turbo format",
    "lint": "turbo lint",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "bumpp": "bumpp -r"
  },
  "dependencies": {
    "@t3-oss/env-core": "^0.13.10",
    "@t3-oss/env-nextjs": "^0.13.10",
    "@vermaysha/discord-webhook": "^1.4.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.7",
    "bumpp": "^10.3.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "turbo": "^2.6.3",
    "ultracite": "6.3.6"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "bun x ultracite fix"
    ]
  },
  "packageManager": "bun@1.3.4"
}
